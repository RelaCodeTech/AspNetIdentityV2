@{
    ViewBag.Title = "Create";
}
@Html.Partial("_MainMenu", "Business Settings/Access Roles")
@*@Html.Partial("_MainSubMenuBusinessSetup", "Access Roles")*@

<br />

<div class="row">

    <div class="col-md-6">
        <div class="panel panel-info">

            <div class="panel-heading">
                <h3 class="panel-title">Create New Access Role</h3>
            </div>

            @using (Html.BeginForm("Create", "Role", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                <div class="panel-body">

                    <div class="form-group">
                        <label for="roleName" class="col-md-4 control-label">Role Name:</label>
                        <div class="">
                            <input type="text" class="form-control" id="roleName" name="roleName">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="roleDesc" class="col-md-4 control-label">Role Description:</label>
                        <div class="">
                            <input type="text" class="form-control" id="roleDesc" name="roleDesc">
                        </div>
                    </div>

                </div>

                <div class="panel-footer">
                    <input class="btn btn-success" type="submit" value="Create" />
                    <input class="btn btn-default" type="button" value="Cancel" />
                </div>

            }

        </div>
    </div>


</div>


<br /><br />

@Html.ActionLink("Back to List", "Index", "Role")

