@{
    ViewBag.Title = "Appointments";
}

@Html.Partial("_MainMenu", "FullCalendar")
@Html.Partial("_MainSubMenuAppointments", "Calendar")

<br />

<div class="container">

    @*<div>
        <a href="#" id="btnInit" class="btn btn-secondary">Initialise database!</a>
    </div>*@

    <div id='calendar' style="width:85%"></div>
    <br /><br /><br />
</div>

<script>

    $(document).ready(function () {

        $('#calendar').fullCalendar({
            header: {
                left: 'prev,next today',
                center: 'title',
                right: 'month,agendaWeek,agendaDay'
            },
            //defaultView: 'agendaDay',
            defaultView: 'month',
            editable: true,
            allDaySlot: false,
            selectable: true,
            slotMinutes: 15,

            events: '/FullCalendar/GetAppointments',

            eventClick: function (calEvent, jsEvent, view) {
                alert('You clicked on event id: ' + calEvent.id
                    + "\nSpecial ID: " + calEvent.someKey
                    + "\nAnd the title is: " + calEvent.title
                    + "\nAnd start time is: " + calEvent.start
                    + "\nAnd end time is: " + calEvent.end
                    + "\nAnd cust id is: " + calEvent.someKey
                    );

            }

        });

    });

</script>